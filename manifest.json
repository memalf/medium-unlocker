{
  "manifest_version": 3,
  "name": "Medium Unlocker",
  "version": "1.0",
  "description": "Unlock Medium for free access.",
  "permissions": [
    "scripting"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://medium.com/*"
  ],
  "action": {
    "default_title": "Medium Unlocker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "activate-medium-unlocker": {
      "suggested_key": {
        "default": "Alt+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Activate Medium Unlocker"
    }
  }
}
